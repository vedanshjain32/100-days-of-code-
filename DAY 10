//Q19: Write a program to classify a triangle as Equilateral, Isosceles, or Scalene based on its side lengths.

#include<stdio.h>
int main()
{
    float a, b, c ;
    printf("enter length of sides of triangle\n");
    scanf("%f\n%f\n%f",&a,&b,&c);
    if((a+b>c) && (b+c>a) && (a+c>b))
    {
        printf("triangle is valid\n");
        
        
        if(a==b==c)
        {
            printf("triangle is equilateral\n");
        }    
        
        else if ((a==b) || (b==c) || (c==a))
        {
            printf("triangle is isosceles\n");
        }
        
        else if(a!=b!=c)
        {
            printf("triangle is scalene\n"); 

            if((a*a + b*b == c*c) || (a*a + c*c == b*b) || (b*b + c*c == a*a))
            {
                printf("triangle is also right angled\n");
            }
        }

       
    }
    else
    {
        printf("triangle is not valid\n");
    }           

    return 0;
}    
   //Q20: Write a program to display the day of the week based on a number (1â€“7) using switch-case.

#include<stdio.h>
int main(){
    int day;
    printf("enter a number between 1-7 :\n");
    scanf("%d",&day);
    switch(day){
        case 1: printf("monday");
                break;
        case 2: printf("tuesday");
                break;
        case 3: printf("wednusday");
                break;        
        case 4: printf("thrusday");
                break;
        case 5: printf("friday");
                break;
        case 6: printf("saturday");
                break;
        case 7: printf("sunday");
                break;
    }
        

    return 0;
      
}

